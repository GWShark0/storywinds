@import 'tailwindcss/base';

@import 'tailwindcss/components';

.btn {
  @apply text-black font-semibold leading-6 py-2 px-8 rounded-full transition-colors duration-150;
}

.btn-sm {
  @apply text-sm leading-4 py-2;
}

.btn-lg {
  @apply py-3 px-16;
}

.btn-primary {
  @apply bg-yellow-300;
}

.btn-primary:hover {
  @apply bg-yellow-400;
}

@import 'tailwindcss/utilities';
